{
  "name": "brainstormforce/astra-pro-sites",
  "description": "Import the Professionally designed, ready-made websites build with Astra Theme with just a few clicks",
  "require": {
    "brainstormforce/astra-notices": "^1.1",
    "brainstormforce/gutenberg-templates": "^2",
    "brainstormforce/zip-ai": "*",
    "brainstormforce/bsf-core": "^1",
    "brainstormforce/ai-builder": "^1",
    "brainstormforce/starter-templates-importer": "^1",
    "brainstormforce/zipwp-images": "^1",
    "brainstormforce/nps-survey": "^1"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "phpcompatibility/phpcompatibility-wp": "^2.1.4",
    "wp-coding-standards/wpcs": "^2.3",
    "phpunit/phpunit": "^9",
    "yoast/phpunit-polyfills": "^2.0",
    "roots/wordpress": "^6.1",
    "wp-phpunit/wp-phpunit": "^6.1",
    "automattic/vipwpcs": "^2.3",
    "phpstan/phpstan": "^1.9",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "php-stubs/wordpress-stubs": "^6.1",
    "php-stubs/generator": "^0.8.2",
    "php-stubs/wp-cli-stubs": "^2.9"
  },
  "extra": {
    "installer-paths": {
      "inc/lib/{$name}/": [
        "brainstormforce/astra-notices",
        "brainstormforce/gutenberg-templates",
        "brainstormforce/zip-ai",
        "brainstormforce/ai-builder",
        "brainstormforce/starter-templates-importer",
        "brainstormforce/zipwp-images",
        "brainstormforce/nps-survey"
      ],
      "admin/{$name}/": [
        "brainstormforce/bsf-core"
      ]
    }
  },
  "repositories": [
		{
      "name": "brainstormforce/gutenberg-templates",
		  "type": "vcs",
		  "url": "git@github.com:brainstormforce/gutenberg-templates.git"
		},
    {
      "name": "brainstormforce/zip-ai",
		  "type": "vcs",
		  "url": "git@github.com:brainstormforce/zip-ai.git"
		},
    {
      "name": "brainstormforce/bsf-core",
      "type": "vcs",
      "url": "git@github.com:brainstormforce/bsf-core.git"
    },
    {
      "name": "brainstormforce/ai-builder",
      "type": "vcs",
      "url": "git@github.com:brainstormforce/ai-builder.git"
    },
    {
      "name": "brainstormforce/starter-templates-importer",
      "type": "vcs",
      "url": "git@github.com:brainstormforce/starter-templates-importer.git"
    },
    {
      "name": "brainstormforce/zipwp-images",
      "type": "vcs",
      "url": "git@github.com:brainstormforce/zipwp-images.git"
    },
    {
      "name": "brainstormforce/nps-survey",
      "type": "vcs",
      "url": "git@github.com:brainstormforce/nps-survey.git"
    }
	],
  "scripts": {
    "format": "phpcbf --standard=phpcs.xml.dist",
    "lint": "phpcs --standard=phpcs.xml.dist",
    "test": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan --memory-limit=2048M analyse",
    "gen-stubs": "vendor/bin/generate-stubs artifact/phpstan/astra-pro-sites/ --out=tests/php/stubs/astra-pro-sites-stubs.php && rm -rf artifact/phpstan",
    "update-stubs": "rm -f tests/php/stubs/astra-pro-sites-stubs.php && bash bin/build-folder-phpstan.sh && composer gen-stubs"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  }
}
